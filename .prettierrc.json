{
    "tabWidth": 4,
    "printWidth": 100,
    "plugins": [
        "@prettier/plugin-php",
        "prettier-plugin-sh",
        "prettier-plugin-tailwindcss",
        "prettier-plugin-blade"
    ],
    "overrides": [
        {
            "files": "*.vue",
            "options": {
                "vueIndentScriptAndStyle": false,
                "singleAttributePerLine": false,
                "printWidth": 120
            }
        },
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.js",
            "options": {
                "trailingComma": "none",
                "bracketSpacing": true,
				"singleQuote": true
            }
        },
        {
            "files": "*.php",
            "options": {
                "parser": "php",
                "trailingCommaPHP": true,
                "braceStyle": "psr-2",
				"singleQuote": true
            }
        },
        {
            "files": ["*.md", "*.markdown"],
            "options": {
                "proseWrap": "preserve"
            }
        },
        {
            "files": "*.json",
            "options": {
                "printWidth": 80
            }
        },
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "printWidth": 99999
            }
        }
    ]
}
